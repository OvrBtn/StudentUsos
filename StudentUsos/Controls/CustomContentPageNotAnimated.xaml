<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentUsos.Controls.CustomContentPageNotAnimated"
             xmlns:controls="clr-namespace:StudentUsos.Controls"
             Background="{StaticResource BackgroundColor}"
             x:DataType="controls:CustomContentPageNotAnimated">

    <ContentPage.ControlTemplate>
        <ControlTemplate>

            <Grid VerticalOptions="FillAndExpand" Background="Transparent">

                <Border x:Name="contentContainer" StrokeThickness="0" VerticalOptions="FillAndExpand" Padding="0" StrokeShape="RoundRectangle 45" Margin="-1,0,-1,0" 
                         BackgroundColor="{StaticResource BackgroundColor}">
                    <ContentPresenter Padding="0"></ContentPresenter>
                </Border>
                
                <StackLayout Margin="0, 0, 0, 0" Padding="0" x:Name="tabBar" BackgroundColor="Transparent" VerticalOptions="EndAndExpand">
                    <controls:CustomTabBarXaml HeightRequest="70"></controls:CustomTabBarXaml>
                </StackLayout>
                
            </Grid>

        </ControlTemplate>
    </ContentPage.ControlTemplate>

</ContentPage>
