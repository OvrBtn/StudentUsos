<?xml version="1.0" encoding="utf-8" ?>
<controls:CustomContentPageNotAnimated
    x:Class="StudentUsos.Features.Settings.Views.LogsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:StudentUsos.Controls"
    xmlns:views="clr-namespace:StudentUsos.Features.Settings.Views"
    xmlns:logger="clr-namespace:StudentUsos.Services.Logger"
    xmlns:string="clr-namespace:StudentUsos.Resources.LocalizedStrings"
    x:DataType="views:LogsViewModel">

    <StackLayout Margin="20,45,20,0">
        <Button x:Name="removeButton" Text="{x:Static string:LocalizedStrings.LogsPage_RemoveAll}" Command="{Binding RemoveAllLogsCommand}"
                Margin="5"/>
        <Button x:Name="sendButton" Text="{x:Static string:LocalizedStrings.LogsPage_SendAllLogs}" Command="{Binding SendAllLogsCommand}"
                Margin="5"/>
        <CollectionView Margin="0" ItemsSource="{Binding Logs}" VerticalOptions="FillAndExpand">
            <CollectionView.FooterTemplate>
                <DataTemplate>
                    <StackLayout Margin="30"/>
                </DataTemplate>
            </CollectionView.FooterTemplate>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="logger:LogRecord">
                    <Grid>
                        <Label Text="{Binding LogRecordString}" Margin="30,10"></Label>
                        <Button Command="{Binding LogClickedCommand, Source={RelativeSource AncestorType={x:Type views:LogsViewModel}}, x:DataType=views:LogsViewModel}"
                            CommandParameter="{Binding .}" BackgroundColor="Transparent"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</controls:CustomContentPageNotAnimated>
